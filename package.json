    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "commitlint": "^16.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0"
  },
  "peerDependencies": {
    "ts-node": ">=10.0.0",
    "vue": ">=3.2.0",
    "vue-router": ">=4.0.0"
  },
  "husky": {
    "hooks": {
